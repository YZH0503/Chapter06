#include <iostream>

using namespace std;

template <class T>
T minimum(T a, T b)
{
	T min;
	min = (a < b) ? a : b;
	return min;
}

int main()
{
	int int1, int2;
	cout << "Input two integer values: ";
	cin >> int1 >> int2;
	cout << "The minimum integer value is: ";
	cout << minimum(int1, int2) << endl;

	double double1, double2;
	cout << "Input two double values: ";
	cin >> double1 >> double2;
	cout << "The minimum double value is: ";
	cout << minimum(double1, double2) << endl;

	char char1, char2;
	cout << "Input two characters values: ";
	cin >> char1 >> char2;
	cout << "The minimum characters value is: ";
	cout << minimum(char1, char2) << endl;
	return 0;
}
